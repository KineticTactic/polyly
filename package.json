{
    "name": "polyly",
    "author": "kinetictactic",
    "license": "MIT",
    "private": false,
    "repository": {
        "type": "git",
        "url": "https://github.com/KineticTactic/polyly.git"
    },
    "bugs": {
        "url": "https://github.com/KineticTactic/polyly/issues"
    },
    "keywords": [
        "webgl",
        "webgl2",
        "renderer",
