    },
    "devDependencies": {
        "typedoc": "^0.25.2",
        "typescript": "^5.0.2",
        "vite": "^4.4.5",
        "vite-plugin-dts": "^3.6.0"
    },
    "dependencies": {
        "twgl.js": "^5.5.3"
